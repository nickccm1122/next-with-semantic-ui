{
  "name": "eshopping-web",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:theme": "gulp build --gulpfile src/semantic/gulpfile.js",
    "build": "next build src",
    "dev": "NODE_ENV=devleopment node server/server.js",
    "fixcode": "standard --fix --verbose | snazzy",
    "git-hook": "lint-staged",
    "lint": "standard --verbose | snazzy",
    "precommit": "yarn git-hook",
    "prepush": "yarn git-hook",
    "start": "next start src",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "immutable": "^3.8.2",
    "koa": "^2.3.0",
    "koa-router": "^7.2.1",
    "next": "^4.0.3",
    "next-redux-saga": "^1.0.1",
    "next-redux-wrapper": "^1.3.4",
    "ramda": "^0.25.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-redux": "^5.0.6",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-saga": "^0.15.6",
    "reduxsauce": "^0.7.0",
    "semantic-ui": "^2.2.13",
    "semantic-ui-react": "^0.74.2"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.5",
    "babel-eslint": "^8.0.1",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-wrap-in-js": "^1.1.1",
    "glob": "^7.1.2",
    "gulp": "^3.9.1",
    "husky": "^0.14.3",
    "lint-staged": "^4.2.3",
    "node-sass": "^4.5.3",
    "postcss-easy-import": "^3.0.0",
    "postcss-loader": "^2.0.7",
    "prettier-standard": "^7.0.1",
    "raw-loader": "^0.5.1",
    "sass-loader": "^6.0.6",
    "scssfmt": "^1.0.2",
    "snazzy": "^7.0.0",
    "standard": "^10.0.3"
  },
  "lint-staged": {
    "*.{js,jsx}": ["prettier-standard", "standard --fix", "git add"],
    "*.scss,!src/theme": ["scssfmt", "git add"],
    "*.json": ["prettier-standard", "git add"]
  },
  "standard": {
    "parser": "babel-eslint",
    "envs": ["jest"],
    "ignore": ["/src/.next/", "/src/semantic/"]
  }
}
